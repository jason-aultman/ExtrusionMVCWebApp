@{
}
@model Calculation
<div class="bg-vector">
    <h1 class="text-center calc-header">Extrusion Web Calculator Application</h1>
<div>
    <form asp-for="@Model" asp-action="GetAnswer" class="myform">
   <div class="row">
        <div class="column">
            <h2>Roll Information</h2>
        <div class="div-form-group">
                <label class="mylable" for="weight">Weight</label>
                <input type="number" step="0.2" name="weight" />
        </div>
        <div class="div-form-group">
                <label class="mylable" for="width">Width as sheeting</label>
                <input type="number" step=".001" name="width" />
        </div>
        <div class="div-form-group">
                <label class="mylable" for="length">Length</label>
                <input type="number" step=".001" name="length" />
        </div>
        <div class="div-form-group">
                <label class="mylable" for="gauge">Gauge</label>
                <input type="number" step=".00001" name="gauge" />
        </div>
        </div>
        <div class="column">
            <h2>Film Type Information</h2>
        <div class="div-form-group">
            <label class="mylable" for="TotalNumberForOrder">Total Quantity For Order</label>
            <input type="number" name="TotalNumberForOrder" />
        </div>
        <div class="div-form-group">
            <label class="mylable" for="is_Por">Bags/Sheets on a roll?</label>
            <input  type="checkbox" for="is_Por" name="is_Por" id="is_Por" />
            <input  type="hidden" form="is_Por" name="is_Por" value="false" />
        </div>
            <div class="div-form-group">
                <label class="mylable" for="bagLength">Length of bag/sheet</label>
                <input type="number" for="bagLength" name="bagLength" id="bagLength" />
            </div>
        <div class="div-form-group">
            <label class="mylable" for="NumberOnRoll">Quantity on each roll?</label>
            <input type="number" for="NumberOnRoll" name="NumberOnRoll" />
        </div>
        </div>
    <div class="column">
        <h2>Film Wind Information</h2>
        <div class="div-form-group">
            <label class="mylable" for="layers" id="layers">Number of layers</label>
            <select name="layers" id="layers">
                <option>1</option>
                <option>2</option>
                <option>4</option>
            </select>
            <label class="mylable" for="coreDiameter" id="coreDiameter">Core diameter</label>
            <select name="coreDiameter" id="coreDiameter">
                <option>3</option>
                <option>6</option>
            </select>
            <label class="mylable" for="MaxDiameter" id="MaxDiameter">Maximum roll diameter</label>
            <select name="MaxDiameter" id="MaxDiameter">
                <option>6</option>
                <option>8</option>
                <option>10</option>
                <option>12</option>
                <option>14</option>
                <option>16</option>
                <option>18</option>
                <option>20</option>
                <option>22</option>
                <option>24</option>
            </select>
        </div>

        <div>
            <label class="mylable" for="coreThickness">Core Wall Thickness</label>
            <select name="coreThickness" id="coreThickness">
                <option>.25</option>
                <option>.50</option>
            </select>
        </div>
    </div>
   </div>
        <div class="text-center">
            <button class="my-button" type="reset">Clear</button>
            <button class="my-button" type="submit">Submit</button>
        </div>
    </form>
 </div>
</div>
